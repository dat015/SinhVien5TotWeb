@model SinhVien5TotWeb.Models.Application
@{
    ViewData["Title"] = "Bổ sung minh chứng";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-warning">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Bổ sung minh chứng
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Vui lòng tải lên các minh chứng bổ sung theo yêu cầu của cán bộ đánh giá.
                    </div>

                    <form asp-action="SubmitSupplement" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="@Model.ApplicationId" />

                        <div class="mb-4">
                            <h6 class="fw-bold mb-3">Tiêu chí cần bổ sung</h6>
                            <div class="row g-3">
                                @foreach (var appCriterion in Model.ApplicationCriteria)
                                {
                                    <div class="col-md-6">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <h6 class="card-title">@appCriterion.Criterion.Name</h6>
                                                <p class="card-text text-muted small">@appCriterion.Criterion.Description</p>
                                                <div class="mt-3">
                                                    <h6 class="small fw-bold">Minh chứng hiện tại:</h6>
                                                    <ul class="list-unstyled mb-3">
                                                        @foreach (var evidence in Model.Evidences.Where(e => e.Criterion.Id == appCriterion.Criterion.Id))
                                                        {
                                                            <li>
                                                                <a href="@evidence.FilePath" target="_blank" class="text-decoration-none">
                                                                    <i class="fas fa-file-alt me-2"></i>
                                                                    @evidence.Title
                                                                </a>
                                                            </li>
                                                        }
                                                    </ul>
                                                    <h6 class="small fw-bold">Bổ sung minh chứng:</h6>
                                                    <input type="file" name="evidences[@appCriterion.Criterion.Id]" class="form-control" multiple>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="ApplicationStatus" class="btn btn-light">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-paper-plane me-2"></i>Nộp minh chứng bổ sung
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Validate form before submit
            $('form').on('submit', function(e) {
                var hasFiles = false;
                $('input[type="file"]').each(function() {
                    if (this.files.length > 0) {
                        hasFiles = true;
                        return false;
                    }
                });

                if (!hasFiles) {
                    e.preventDefault();
                    alert('Vui lòng chọn ít nhất một file minh chứng để tải lên.');
                    return false;
                }
            });
        });
    </script>
} 